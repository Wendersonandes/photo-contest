<!-- Thumbnail -->
<div class="col-md-2">
  <a href="#" data-toggle="modal" data-target=#<%="modal-#{participant.id}"%> class="thumbnail"> <%= image_tag(participant.picture.url(:thumb), alt: participant.contest.title, class: "img-responsive") unless participant.contest.image.blank? %> 
  </a>
</div>

<!-- Modal -->
<div class="modal fade" id='<%="modal-#{participant.id}"%>' tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <center><h4 class="modal-title"><%=participant.title%></h4></center>
        </div>

        <br>
        <div class="modal-body">
            <div class="row image">
                <div class="col-xs-12">
                 <%= image_tag(participant.picture.url(:medium), alt: participant.contest.title, class: "img-responsive") unless participant.contest.image.blank? %> 
                </div>
            </div>
            <br>

            <br>
            <div class="row">
            <div class="col-xs-3 col-sm-2">
                <a href="#" class="thumbnail">
                    <% if participant != nil %>
                    <%= gravatar_for participant.user, { size: 140 , _class: "img-responsive"} %>
                    <% else %>
                    <%= gravatar_for participant.user, { size: 140 , _class: "img-responsive"} %>
                    <% end %>
                </a>
            </div>

              <div class="col-xs-9 col-sm-10">
                <p>Fotógrafo(a): <%= participant.user.name %> </p>
                <p>Descrição: <%=participant.description%></p>
              </div>
            </div>
        </div>
        
        <div class="modal-footer">
             <div class="row align-button-approve-status">
                <div class="col-md-6"><%= link_to_reject_inscription(participant) %></div>
                <div class="col-md-6"> <%= link_to_approve_inscription(participant) %></div>
            </div>
        </div>
    </div>
  </div>
</div>
<div class="container">
	<div class="row">
		<h2>Lista Fotografos</h2>
		<% @photographers.each do |photographer|%>
			<div class="col-md-12 col-xs-12">
				<div class="col-xs-6 col-sm-2">
					<a class="thumbnail">
				    	<%= gravatar_for photographer %>
				    </a>
				</div>
				<div class="col-sm-10 col-xs-6">
					<a href="#"><h3><%= link_to photographer.name, "#{photographer.id}" %></h3></a>
					<article class="small-description">
						<%= photographer.short_description%>
					</article>
				</div>
			</div>
		<% end; %>
	</div>
</div>
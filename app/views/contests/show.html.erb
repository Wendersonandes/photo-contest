<% provide(:title, "Contests Show") %>
<div id="contest" class="container">
	<div id="description" class="row">
		<div class="col-xs-12">
			<h2><%= @contest.title %></h2>
		</div>
	</div>
	<div id="new-contest" class="row">
		<div class="col-xs-12 col-sm-4">
			<a href="#" class="thumbnail">
				<%= image_tag(@contest.image(:original), alt: @contest.title, class: "img-responsive") unless @contest.image.blank? %> 
		    	<%= image_tag("placeholder.png", alt: "Placeholder", class: "img-responsive") unless @contest.image.blank? == false %>
		    </a>
		    <ul class="list-group">
				<li class="list-group-item">Início das Inscrições: <%= @contest.opening_enrollment.strftime("%d/%m/%Y - %H:%M") %></li>
				<li class="list-group-item">Término das Inscrições: <%= @contest.closing_enrollment.strftime("%d/%m/%Y - %H:%M") %></li>
				<li class="list-group-item">Início da Votação: <%= @contest.opening.strftime("%d/%m/%Y - %H:%M") %></li>
				<li class="list-group-item">Término da Votação: <%= @contest.opening.utc.strftime("%d/%m/%Y - %H:%M") %></li>
			</ul>
		</div>
		<div class="col-xs-12 col-sm-8">
			<!-- <div class="well well-md"> -->
			    <div class="row">
			    	<div class="col-xs-12">
			    		<%= @contest.description %>
			    		<p><%= contest_status_label(@contest) %></p>
			    	</div>
			    	
					
					<div class="col-xs-12">
						<% if(@contest.open_enrollment?) %>
							<p>As inscrições estarão abertas por mais <%= format_date_old(@contest.closing_enrollment) %></p>
						<% end %>
						<p><%= contest_link_register(@contest) %></p>
					</div>

			    </div>
			<!-- </div> -->
		</div>
	</div>
	<% if @contest.open? %>
		<hr class="style-hr">
		<div class="show-pictures-contest">
			<div class="row">
				<% @approved_participants.each_with_index do |participant, index| %>
					<div class="col-md-4 col-sm-4 col-xs-12">
						<a href="#" class="thumbnail" data-toggle="modal" data-target="#participant-<%= participant.id %>-photo">
					    	<%= image_tag(participant.picture.url(:medium), alt: participant.title, class: "img-responsive") unless participant.picture.url.blank? %>
					    	<h4><%= participant.title %></h4>
				   		</a>
					</div>
					<% if (index + 1) % 3 == 0 %>
						</div>
						<div class="row">
					<% end %>
				<% end %>
			</div>
		</div>
	<% end %>
	<% @approved_participants.each do |participant| %>
		<div class="modal fade" id="participant-<%= participant.id %>-photo" tabindex="-1" role="dialog">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						<h4 class="modal-title"><%= participant.title %></h4>
					</div>
					<div class="modal-body">
						<div class="row image">
							<div class="col-xs-12">
								<%= image_tag(participant.picture.url(:medium), alt: participant.title, class: "img-responsive") unless participant.picture.url.blank? %>
							</div>
						</div>
						<br>
						<div class="row">
							<div class="col-xs-3 col-sm-2">
								<%= gravatar_for participant.user, { size: 70 } %>
							</div>
							<div class="col-xs-9 col-sm-10">
								<p>Autor: <%= participant.user.name %></p>
								<p>Descrição: <%= participant.description %></p>
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button class="btn btn-primary">Votar</button>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
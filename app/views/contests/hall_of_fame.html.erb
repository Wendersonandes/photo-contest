<% provide(:title, "Hall da fama") %>
<div class="container">
	<div class="row">
		<h2>Hall da fama</h2>
		<% @photographers_first.each.with_index do |photographer, index|%>
			<div class="col-md-12 col-xs-12">
				<div class="col-xs-6 col-sm-2">
					<a class="thumbnail">
				    	<%= gravatar_for photographer %>
				    </a>
				</div>
				<div class="col-sm-10 col-xs-6">
					<div class="col-md-2 col-xs-3 ">
						<% if index == 0 %>
							<i class="col-md-10 col-sm-6 col-xs-12 "><%= image_tag("first.png", alt: "Campe達o", class: "img-responsive img-hall-position", title: "Campe達o") %>
							</i>
						<% elsif index == 1 %>
							<i class="col-md-10 col-sm-6 col-xs-12"><%= image_tag("second.png", alt: "Vice-campe達o", class: "img-responsive img-hall-position", title: "Vice Campe達o") %>
							</i>
						<% elsif index == 2 %>
							<i class="col-md-10 col-sm-6 col-xs-12"><%= image_tag("third.png", alt: "Terceiro lugar", class: "img-responsive img-hall-position", title: "Terceiro") %>
	            			</i>
						<% end %>
					</div>
					<a href="#"><h3><%= index+1 %>. <%= link_to photographer.name, photographer_path(photographer.id) %></h3></a>
					<article class="small-description">
						<%= photographer.short_description%>
					</article>
				</div>
			</div>
		<% end; %>
	</div>
	<hr class="style-hr">
	<div class="row">
		<% @photographers_last.each.with_index do |photographer, index|%>
			<div class="col-md-12 col-xs-12">
				<div class="col-xs-3 col-sm-2 col-md-1">
					<a>
				    	<%= gravatar_for photographer, {size: 40} %>
				    </a>
				</div>
				<div class="col-sm-10 col-xs-9 col-md-11">
					<a href="#"><h3><%= index+4 %>. <%= link_to photographer.name, photographer_path(photographer.id) %></h3></a>
					<article class="small-description">
						<%= photographer.short_description%>
					</article>
				</div>
			</div>
		<% end; %>
	</div>
</div>